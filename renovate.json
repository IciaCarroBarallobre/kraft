{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended"],
    "customManagers": [
        {
            "fileMatch": ["(^|/)rebar\\.config$"],
            "matchStrings": [
                "\\{\\s*(?<depName>[a-z][a-zA-Z0-9_@']*)\\s*,\\s*\"(?<currentValue>(?:~>\\s*)?[0-9a-zA-Z0-9_.-]+)\"(?:\\s*,\\s*\\{pkg,\\s*[a-z][a-zA-Z0-9_@']*\\s*\\})?\\s*\\}",
                "(?<!\\{\\s*)\\\\b(?<depName>[a-z][a-zA-Z0-9_@']*)\\\\b\\s*(?=[,]])"
            ],
            "matchStringsStrategy": "any",
            "depNameTemplate": "{{depName}}",
            "currentValueTemplate": "{{currentValue}}",
            "datasourceTemplate": "hex",
            "versioningTemplate": "semver"
        },
        {
            "fileMatch": ["(^|/)rebar\\.config$"],
            "matchStrings": [
                "\\{\\s*(?<depName>[a-z][a-zA-Z0-9_@']*)\\s*,\\s*\\{\\s*(?<depType>git|git_subdir)\\s*,\\s*\"(?<packageName>[^\"]+)\"\\s*,\\s*(?:(?:\\{(?:branch|ref)\\s*,\\s*\"[^\"]+\"\\s*\\})|(?:\\{tag\\s*,\\s*\"(?<currentValue>[^\"\\s]+)\"\\s*\\}))(?:\\s*,\\s*\"[^\"]*\")?(?:\\s*,\\s*\\{[^}]*\\})*\\s*\\}\\s*\\}"
            ],
            "matchStringsStrategy": "any",
            "depNameTemplate": "{{depName}}",
            "packageNameTemplate": "{{packageName}}",
            "currentValueTemplate": "{{currentValue}}",
            "datasourceTemplate": "git-tags",
            "versioningTemplate": "semver"
        }
    ]
}
